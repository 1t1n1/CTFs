<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Product Management - Admin Panel - EC Junior</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="/">EC Junior</a>
            <div class="navbar-nav ms-auto">
                <a class="nav-link" href="/admin">User Management</a>
                <a class="nav-link" href="/admin/products">Product Management</a>
                <a class="nav-link" href="/">Home</a>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        <h1>Admin Panel - Product Management</h1>

        <% if (success) { %>
            <div class="alert alert-success"><%= success %></div>
        <% } %>

        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Price</th>
                        <th>Stock</th>
                        <th>Category</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% products.forEach(p => { %>
                        <tr>
                            <td><%= p.id %></td>
                            <td><%= p.name %></td>
                            <td><%= p.description %></td>
                            <td>$<%= p.price.toFixed(2) %></td>
                            <td><%= p.stock %></td>
                            <td><%= p.category %></td>
                            <td>
                                <form method="post" action="/admin/products/restock" class="d-inline">
                                    <input type="hidden" name="productId" value="<%= p.id %>">
                                    <div class="input-group input-group-sm" style="width: 200px;">
                                        <input type="number" name="stockAmount" value="10" min="1" class="form-control" placeholder="Amount">
                                        <button type="submit" class="btn btn-sm btn-success">Restock</button>
                                    </div>
                                </form>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>
