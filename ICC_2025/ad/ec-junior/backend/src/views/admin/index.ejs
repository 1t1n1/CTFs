<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Panel - EC Junior</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <%- include('../partials/header', { user }) %>

    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h1>Admin Panel - User Management</h1>
            <div>
                <a href="/admin/products" class="btn btn-primary">Product Management</a>
                <a href="/admin/inquiries" class="btn btn-primary ms-2">View Inquiries</a>
            </div>
        </div>

        <div class="alert alert-success">
            <strong>Flag:</strong> <%= flag1 %>
        </div>

        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Email</th>
                        <th>Name</th>
                        <th>Credit Balance</th>
                        <th>Admin</th>
                    </tr>
                </thead>
                <tbody>
                    <% users.forEach(u => { %>
                        <tr>
                            <td><%= u.id %></td>
                            <td><%= u.email %></td>
                            <td><%= u.firstName %> <%= u.lastName %></td>
                            <td>$<%= u.creditBalance.toFixed(2) %></td>
                            <td><%= u.isAdmin ? 'Yes' : 'No' %></td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </div>

    <%- include('../partials/footer') %>
</body>
</html>