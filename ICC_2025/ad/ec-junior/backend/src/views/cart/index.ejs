<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Shopping Cart - EC Junior</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <%- include('../partials/header', { user }) %>

    <div class="container mt-4">
        <h1>Shopping Cart</h1>
        
        <% if (error) { %>
            <div class="alert alert-danger"><%= error %></div>
        <% } %>

        <div class="row">
            <div class="col-md-8">
                <% if (cartItems.length > 0) { %>
                    <% cartItems.forEach(item => { %>
                        <div class="card mb-3">
                            <div class="row g-0">
                                <div class="col-md-12">
                                    <div class="card-body">
                                        <h5 class="card-title"><%= item.productName %></h5>
                                        <p class="card-text"><%= item.productDescription %></p>
                                        <p class="card-text"><strong>$<%= item.productPrice.toFixed(2) %></strong></p>
                                        <p class="card-text">Stock Available: <%= item.productStock %></p>

                                        <div class="d-flex align-items-center">
                                            <form method="post" action="/cart/update" class="d-inline me-2">
                                                <input type="hidden" name="id" value="<%= item.id %>">
                                                <div class="input-group" style="width: 180px;">
                                                    <input type="number" name="quantity" value="<%= item.quantity %>" min="1" max="<%= item.productStock %>" class="form-control" style="font-size: 1.1rem; padding: 0.5rem;">
                                                    <button type="submit" class="btn btn-outline-primary">Update</button>
                                                </div>
                                            </form>

                                            <form method="post" action="/cart/remove" class="d-inline">
                                                <input type="hidden" name="id" value="<%= item.id %>">
                                                <button type="submit" class="btn btn-outline-danger">Remove</button>
                                            </form>
                                        </div>

                                        <p class="card-text mt-2">
                                            <small class="text-muted">Subtotal: $<%= (item.productPrice * item.quantity).toFixed(2) %></small>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                <% } else { %>
                    <div class="text-center">
                        <h3>Your cart is empty</h3>
                        <p>Start shopping to add items to your cart.</p>
                        <a href="/" class="btn btn-primary">Browse Products</a>
                    </div>
                <% } %>
            </div>
            
            <% if (cartItems.length > 0) { %>
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Order Summary</h5>
                            <% const total = cartItems.reduce((sum, item) => sum + (item.productPrice * item.quantity), 0); %>
                            <p class="card-text">Total: <strong>$<%= total.toFixed(2) %></strong></p>
                            <p class="card-text">Your Credit Balance: <strong>$<%= userProfile.creditBalance.toFixed(2) %></strong></p>

                            <% if (userProfile.creditBalance >= total) { %>
                                <a href="/cart/checkout" class="btn btn-success w-100">Proceed to Checkout</a>
                            <% } else { %>
                                <button class="btn btn-secondary w-100" disabled>Insufficient Credit</button>
                                <small class="text-muted">You need $<%= (total - userProfile.creditBalance).toFixed(2) %> more credit.</small>
                            <% } %>
                        </div>
                    </div>
                </div>
            <% } %>
        </div>
    </div>

    <%- include('../partials/footer') %>
</body>
</html>