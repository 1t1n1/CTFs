<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Checkout - EC Junior</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <%- include('../partials/header', { user }) %>

    <div class="container mt-4">
        <h1>Checkout</h1>

        <div class="row">
            <div class="col-md-8">
                <h3>Order Summary</h3>
                <% cartItems.forEach(item => { %>
                    <div class="card mb-3">
                        <div class="row g-0">
                            <div class="col-md-12">
                                <div class="card-body">
                                    <h5 class="card-title"><%= item.productName %></h5>
                                    <p class="card-text"><%= item.productDescription %></p>
                                    <p class="card-text">
                                        <strong>$<%= item.productPrice.toFixed(2) %></strong> Ã— <%= item.quantity %>
                                        = <strong>$<%= (item.productPrice * item.quantity).toFixed(2) %></strong>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>

            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Payment Summary</h5>
                        <p class="card-text">Total: <strong>$<%= total.toFixed(2) %></strong></p>
                        <p class="card-text">Your Credit Balance: <strong>$<%= userProfile.creditBalance.toFixed(2) %></strong></p>
                        <p class="card-text">Remaining Balance: <strong>$<%= (userProfile.creditBalance - total).toFixed(2) %></strong></p>

                        <form method="post" action="/cart/placeorder">
                            <button type="submit" class="btn btn-success w-100">Place Order</button>
                        </form>

                        <a href="/cart" class="btn btn-outline-secondary w-100 mt-2">Back to Cart</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('../partials/footer') %>
</body>
</html>