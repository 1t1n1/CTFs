<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Profile - EC Junior</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <%- include('../partials/header', { user }) %>

    <div class="container mt-4">
        <div class="row">
            <div class="col-md-6">
                <h2>User Profile</h2>
                
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title"><%= userProfile.firstName %> <%= userProfile.lastName %></h5>
                        <p class="card-text"><strong>Email:</strong> <%= userProfile.email %></p>
                        <p class="card-text"><strong>Credit Balance:</strong> $<%= userProfile.creditBalance.toFixed(2) %></p>
                        <a href="/account/editprofile" class="btn btn-primary">Edit Profile</a>
                    </div>
                </div>
            </div>
            
            <div class="col-md-6">
                <h3>Order History</h3>
                <% if (orders.length > 0) { %>
                    <% orders.forEach(order => { %>
                        <div class="card mb-3">
                            <div class="card-body">
                                <h6 class="card-title">Order #<%= order.id %></h6>
                                <p class="card-text">
                                    <strong>Date:</strong> <%= new Date(order.orderDate).toLocaleDateString() %><br>
                                    <strong>Total:</strong> $<%= order.totalAmount.toFixed(2) %><br>
                                    <strong>Status:</strong> <%= order.status %><br>
                                    <strong>Items:</strong> <%= order.items || 'N/A' %>
                                </p>
                                <a href="/cart/orderconfirmation/<%= order.id %>" class="btn btn-sm btn-primary">View Details</a>
                            </div>
                        </div>
                    <% }); %>
                <% } else { %>
                    <p>No orders found.</p>
                <% } %>
            </div>
        </div>
    </div>

    <%- include('../partials/footer') %>
</body>
</html>